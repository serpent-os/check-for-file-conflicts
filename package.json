{
  "name": "conflict-checker",
  "description": "Tool to detect file conflicts in moss packages",
  "version": "1.0.0",
  "author": "Serpent OS Developers",
  "private": true,
  "homepage": "https://github.com/serpent-os/conflict-checker",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serpent-os/conflict-checker.git"
  },
  "bugs": {
    "url": "https://github.com/serpent-os/conflict-checker/issues"
  },
  "keywords": [
    "moss",
    "stone",
    "conflicts"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint src/**/*.ts",
    "package": "ncc build src/index.ts --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "jsonc-parser": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.4.2"
  }
}
